<h1>Listing categories</h1>

<table class = "table table-striped table-bordered table-condensed ">
  <thead>
    <tr>
      <th>Title</th>
      
    </tr>
  </thead>

  <tbody class = "table-striped">
    <% @categories.each do |category| %>
      <tr>
        <td><%= category.title %></td>
        <td><%= link_to 'Show', category, :class => "btn btn-info" %></td>
        <td><%= link_to 'Edit', edit_category_path(category) , :class => "btn btn-warning" %></td>
        <% if current_user.id == 1 %>
           <td><%= link_to 'Destroy', category, method: :delete,:class => "btn btn-danger", data: { confirm: 'Are you sure?' } %></td>
        <%end%>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Category', new_category_path ,:class => "btn btn-primary" %>
