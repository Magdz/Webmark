<h1>Listing followers</h1>

<table class = "table table-striped table-bordered table-condensed ">
	<thead>
		<tr>
			<th>Username</th>
		</tr>
	</thead>
	<tbody class = "table-striped">
		<% Follower.all.each do |follower|
			if follower.followed_id == current_user.id %>
			<tr>
				<td><%= link_to User.find(follower.follower_id).username, user_path(follower.follower_id) %></td>
			</tr>
			<% end 
			end %>
	</tbody>
</table>

<%= link_to 'Back', 'followers/:id/following_show' ,:class => "btn btn-primary" %>