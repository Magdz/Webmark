<!DOCTYPE html>
<html>
<head>
  <title>Webmark</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
 

<header class ="navbar navbar-default" role = "navigation">
  <div class ="navbar-inner">
    <div class = "container">
      <div id = "logo" class = "navbar-brand">
      <a href="/">
      <img src="../assets/200.png" alt="Logo" height="38" width="38"></a>
       <%= link_to 'Webmark' , root_path ,:class => "active" %></div>
      <nav class = "collapse navbar-collapse navbar-ex1-collapse">
        <% if user_signed_in? %>
    <ul class="nav navbar-nav navbar-right nav-tabs" role = "tablist">
       <li><%= link_to "Category" , categories_path , :role => "tab"  %> </li>
       <li><%= link_to "SubCategory" , subcategories_path %> </li>
       <li><%= link_to "Account/Settings" , edit_user_registration_path %></li>
       <li><%= link_to "Profile" , user_path(current_user.id)%></li>
       <li><%= link_to "Bookmarks" , bookmarks_path %></li>
       <li><%= link_to "Sign out" , destroy_user_session_path , :method => :delete %></li>
    </ul>
  <%else%>
    <ul class ="nav navbar-nav navbar-right ">
      <li><%= link_to "Sign in" , new_user_session_path %></li>
      <li><%= link_to " Sign up" , new_user_registration_path %></li>
   </ul>

  <%end%>
      </nav>
    </div>
  </div>
</header>



<div id = "container" class = "col-md-9 center-block">
<%= yield %>
</div>
</body>
</html>
