<h1>Listing subcategories</h1>

<table class = "table table-striped table-bordered table-condensed ">
  <thead>
    <tr>
      <th>Title</th>
      <th>Category id</th>
    </tr>
  </thead>

  <tbody>
    <% @subcategories.each do |subcategory| %>
      <tr>
        <td><%= subcategory.title %></td>
        <td><%= Category.find(subcategory.category_id).title%></td>
        <td><%= link_to 'Show', subcategory ,:class => "btn btn-info" %></td>
        <td><%= link_to 'Edit', edit_subcategory_path(subcategory) , :class => "btn btn-warning" %></td>
        <td><%= link_to 'Destroy', subcategory, method: :delete, :class => "btn btn-danger", data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Subcategory', new_subcategory_path ,:class => "btn btn-primary" %>
